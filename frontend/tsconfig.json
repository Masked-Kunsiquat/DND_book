{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Ensure TypeScript Recognizes PocketBase Types */
    "baseUrl": "./src",
    "paths": {
      "@pocketbase/types": ["types/pocketbase-types"]
    }
  },
  "include": ["src", "src/types/pocketbase-types.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
